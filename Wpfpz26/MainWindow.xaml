<Window x:Class="Wpfpz26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfpz26"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <ListBox Name="fileAction" HorizontalAlignment="Left">
            <TextBlock>File</TextBlock>
            <ListBoxItem>
                <Button Click="Button_Click" Name="CreateFile">Create file</Button>
            </ListBoxItem>
        </ListBox>

        <TextBox x:Name="MainTextBox" HorizontalAlignment="Right" Width="320"></TextBox>
    </Grid>
</Window>
